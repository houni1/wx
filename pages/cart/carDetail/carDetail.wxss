@import '../../../utils/wxParse/wxParse.wxss';
page {
  background: #f9f9fa;
}
.flex {
  display: flex;
}
.flex1 {
  flex: 1;
}
.topPic image{
  width: 100%;
  display: block;
}
/* 标题 */
.mainInfo {
  padding: 40rpx;
  background: #fff;
}
.mainInfo .title {
  line-height: 54rpx;
}
.mainInfo .title view {
  display: inline;
}
.mainInfo image {
  display: inline-block;
  vertical-align: middle;
  width: 50rpx;
  margin-right: 10rpx;
}
.mainInfo .mainTitle {
  font-weight: bold;
  font-size: 32rpx;
}
.mainInfo .title .carStatus {
  padding: 8rpx 20rpx;
  background: #e5f9f6;
  border-radius: 40rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #01c4a2;
  margin-right: 30rpx;
  margin-left: 20rpx;
  white-space:nowrap;
}
/* 价格 */
.price view {
  display: inline-block;
}
.price {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.price .priceNum {
  font-size: 42rpx;
  font-weight: bold;
  color: #fa2117;
  margin-right: 6rpx;
}
.price .priceUnit {
  font-size: 26rpx;
  color: #fa2117;
  margin-right: 16rpx;
}
.price .guidePrice {
  font-size: 26rpx;
  color: #a6a6a6;
}
.price .call {
  width: 156rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  font-size: 26rpx;
  color: #282c39;
  background: #ffcf10;
  border-radius: 62rpx;
  box-shadow: 0 5rpx 20rpx #ffcf10;
}
/* 位置信息 */
.addressWrap {
  padding: 40rpx;
  background: #fff;
  margin-top: 10rpx;
}
.photo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 40rpx;
  overflow: hidden;
  box-shadow: 0 0 5rpx 5rpx #dedede;
}
.photo image {
  width: 100rpx;
}
.addressWrap .info .name {
  font-size: 30rpx;
  color: #282c39;
  font-weight: bold;
}
.addressWrap .info view {
  margin-top: 10rpx;
}
.iconAddress {
  width: 38rpx;
}
.distance {
  font-size: 30rpx;
  color: #ffa800;
  margin-right: 20rpx;
}
.addressName {
  font-size: 24rpx;
  color: #a6a6a6;
}
.toMap {
  width: 120rpx;
  text-align: center;
  border-left: 1px solid #f2f2f2;
}
.toMap text {
  display: block;
  font-size: 24rpx;
  color: #a6a6a6;
}
.toMap image {
  width: 55rpx;
}
/* 级别，变速箱 */
.levelInfo {
  background: #fff;
  margin-top: 16rpx;
  padding: 40rpx 0;
  text-align: center;
}
.levelInfo .kind {
  font-size: 26rpx;
  color: #a6a6a6;
  margin-bottom: 40rpx;
}
.levelInfo .val {
  font-size: 28rpx;
  color: #282c39;
  font-weight: bold;
}
/* 车辆简介 */
.introduction {
  padding: 40rpx;
  margin-top: 16rpx;
  background: #fff;
}
.introduction .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #282c39;
  margin-bottom: 32rpx;
}
.introduction .content {
  font-size: 26rpx;
  color: #a6a6a6;
  line-height: 40rpx;
}
/* 参数配置 */
.parameter {
  margin-top: 16rpx;
  background: #fff;
}
.parameter .title {
  height: 140rpx;
  padding: 0 40rpx;
  align-items: center;
}
.parameter .parameterTitle {
  font-size: 40rpx;
  color: #282c39;
  font-weight: bold;
}
.parameter .title .open,
.parameter .title .close {
  font-size: 26rpx;
  color: #a6a6a6;
  align-items: center;
  height: 50rpx;
}
.parameter .title image {
  width: 20rpx;
  margin-left: 10rpx;
}
/* 基本信息 */
.baseInfo {
  min-height: 84rpx;
  align-items: center;
  padding: 0 40rpx;
  font-size: 26rpx;
  color: #282c39;
}
.baseInfo .title {
  font-weight: bold;
}
.baseInfo .space {
  display: inline-block;
  margin-left: 20rpx;
  font-size: 10rpx;
}
.infoList {
  background: #fff;
  padding: 20rpx 40px;
}
.infoList .infoItem {
  height: 84rpx;
  display: flex;
  align-items: center;
}
.infoList .infoItem view:first-child {
  font-size: 26rpx;
  color: #a6a6a6;
}
.infoList .infoItem view:last-child {
  font-size: 26rpx;
  color: #282c39;
}
/* 实拍图 */
.realPicture {
  margin-top: 16rpx;
  background: #fff;
  padding: 0 40rpx;
}
.realPicture .title {
  height: 130rpx;
  line-height: 120rpx;
}

/* 分享 */
.share {
  position: fixed;
  right: 20rpx;
  bottom: 240rpx;
  width: 220rpx;
  height: 78rpx;
}
button {
  padding: 0;
}
button::after {
  border: 0;
} 
.shareBtn {
  height: 78rpx;
  background: #ffcf10;
  border-radius: 78rpx;
  line-height: 78rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
}

.msg-box {
  position: fixed;
  bottom: 140rpx;
  right: 20rpx;
  height: 78rpx;
  width: 220rpx;
  background: #ffcf10;
  border-radius: 36rpx;
  font-size: 26rpx;
  line-height: 78rpx;
  text-align: center;
  color: #fff;
  vertical-align: middle;
}