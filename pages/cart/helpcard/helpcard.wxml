<view class='help-item-wrap'>
  <view class='help-item-box' wx:for="{{content}}" wx:key="{{index}}">
    <view class='help-item-title'>{{item.problem}}</view>
    <view class='help-item-pic'>
      <image src='{{item.img}}' style="height: {{index == 0 ? '631rpx' : '660rpx'}}"></image>
    </view>
    <text class='help-item-text'>
      {{item.answer}}
    </text>
  </view>
</view>