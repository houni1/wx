.wrap {
  background:#fbfbfb; 
  overflow: hidden;
}
.filterTab {
  align-items: center;
  font-size: 26rpx;
  color: #28293c;
  height: 84rpx;
  font-family: 'PingFangSC-Regular';
  background: #fff;
  margin-bottom: 10rpx;
}
.filterTab .tabItem {
  flex: 1;
  text-align: center;
}
.filterTab .filterActive {
  color: #fcc91a;
}
.filterTab image {
  width: 14rpx;
  vertical-align: middle;
}
.allGoods {
  position: absolute;
  left: 0;
  top: 95rpx;
  width: 100%;
  height: 100%;
  line-height: 60rpx;
  padding: 20rpx 0;
  z-index: 100;
}
.thiv {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}
.allGoods text {
  display: block;
  background: #fff;
  line-height: 90rpx;
  color: #28293c;
  font-size: 28rpx;
  padding-left: 40rpx;
}
.allGoods .active {
  color: #fcc91a;
}
/* 列表 */
.carsList {
  display: flex;
  flex-direction: column;
}
.item {
  position: relative;
  overflow: hidden;
  margin-bottom: 10rpx;
}
navigator {
  display: flex;
  padding: 28rpx 0;
  background: #fff;
}
.hotTag {
  position: absolute;
  left: 40rpx;
  top: 0;
}
.hotTag image {
  width: 86rpx;
}
.imgWrap {
  width: 330rpx;
  text-align: center;
}
.item .imgWrap image {
  width: 230rpx; 
  height: 100%;
  vertical-align: middle;
}
.carInfo {
  flex: 1;
  padding-right: 20rpx;
}
.carInfo .title {
  font-size: 28rpx;
  line-break: 42rpx;
  font-weight: bold;
}
.carInfo .subTitle {
  font-size: 28rpx;
}
.price {
  font-size: 26rpx;
  color: #f72626;
  margin-top: 26rpx;
}
.priceNum {
  font-size: 28rpx;
  font-weight: bold;
  display: inline;
}
.guidePrice {
  font-size: 24rpx;
  color: #a6a6a6;
  margin-top: 20rpx;
}
.status {
  margin-top: 20rpx;
}
.carStatus, .stock {
  display: inline-block;
}
.carStatus {
  padding: 8rpx 20rpx;
  background: #e5f9f6;
  border-radius: 40rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #01c4a2;
  margin-right: 30rpx;
}
.stock {
  font-size: 24rpx;
  color: #a6a6a6;
}
.shareBtn {
  position: absolute;
  right: 28rpx;
  bottom: 28rpx;
  width: 80rpx;
  height: 80rpx;
}
.shareBtn image {
  width: 40rpx;
}

button {
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  background: #fff;
}
button::after {
  border: 0;
}
.noData {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 50%;
}
.noData image{
  width: 100%;
}