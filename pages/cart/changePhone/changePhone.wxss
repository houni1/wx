/* pages/cart/changePhone/changePhone.wxss */
.change-phone-wrap{padding:130rpx 80rpx 0 80rpx;}
.phone-wrap{height:80rpx;border-bottom:1px solid #eee;}
.phone-write{display:block;float:left;width:300rpx;font-size:26rpx;color:#4d4d4d;}
.code-in{float:right;position:relative;width:180rpx;margin-top:8rpx;}
.get-code{position:absolute;font-size:26rpx;color:#a6a6a6;}
.get-code-yellow{color:#ffcf10;}
/* .get-code-yellow{color:#ffcf10;} */
.code-tit{position:absolute;font-size:26rpx;color:#a6a6a6;}
.code-tit-margin{margin-left:15rpx;}
.code-wrap{height:80rpx;margin-top:30rpx;line-height:80rpx;font-size:26rpx;color:#a6a6a6;border-bottom:1px solid #eee;}
.code-wrap input{color:#4d4d4d;}
.verify{width:590rpx;height:98rpx;margin-top:140rpx;line-height:98rpx;text-align:center;font-size:34rpx;font-weight:bold;color:#fff;border-radius:48rpx;border:1px solid #cdcfd3;background-color:#cdcfd3;}
.verify-yellow{color:#282c39;border:1px solid #ffcf10;background-color:#ffcf10;}
.clear-phone{float:right;width:40rpx;height:40rpx;margin-top:8rpx;}
.clear-phone image{display:block;width:28rpx;height:28rpx;margin-top:6rpx;margin-left:6rpx;}