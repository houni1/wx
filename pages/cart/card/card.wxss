/* pages/cart/card/card.wxss */
.card-box {
  position: relative;
}
.card-box .card-box-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 322rpx;
  z-index: -1;
}

.card {
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 92rpx;
  box-sizing: border-box;
}

.info-box {
  position: relative;
  width: 100%;
  background: #fff;
  padding-top: 120rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  text-align: center;
}

.user-pic {
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: absolute;
  top: -75rpx;
  left: 50%;
  margin-left: -75rpx;
}

.card-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #282c39;
  padding-bottom: 45rpx;
}

.info-list {
  width: 100%;
  display: flex;
}

.card-info-item {
  flex: 1;
  text-align: center;
}

.item-text {
  font-size: 26rpx;
  color: #808080;
  padding-left: 18rpx;
}

.info-company {
  padding-top: 45rpx;
  padding-bottom: 50rpx;
  text-align: center;
  border-bottom: 1rpx dashed #eee;
}

.company-text {
  font-size: 32rpx;
  font-weight: 600rpx;
  color: #282c39;
}

.send-card {
  text-align: center;
  height: 98rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  line-height: 48rpx;
  box-sizing: border-box;
}

.send-card-box {
  width: 160rpx;
  margin: 0 auto;
}

.send-icon {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  float: left;
}

.send-text {
  padding-left: 14rpx;
  float: left;
  font-size: 28rpx;
  color: #282c39;
}

.person-info {
  margin-top: 15rpx;
  width: 100%;
  background: #fff;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}

.info-title {
  padding-top: 50rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: #282c39;
  padding-bottom: 15rpx;
}

.person-info-item {
  border-bottom: 1rpx solid #eee;
  display: flex;
}

.info-item-text {
  font-size: 26rpx;
  color: #a6a6a6;
  line-height: 108rpx;
  width: 160rpx;
}

.info-item-input {
  font-size: 26rpx;
  color: #4d4d4d;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.info-item-input input {
  flex: 1;
}

.info-item-btn {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}

.info-item-btn text {
  display: block;
  width: 115rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  color: #fcc91a;
  font-size: 26rpx;
  border: 1rpx solid #eee;
  border-radius: 29rpx;
}