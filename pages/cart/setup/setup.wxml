<form bindsubmit="editUserInfo" class='setup-box' wx:if="{{flag}}">
  <view class='set-pic'>
    <view class='item-title'>头像</view>
    <view class='item-content' data-pos='header' bindtap='uploadImage'>
      <image src='{{headPortrait}}/247'></image>
    </view>
  </view>
  <view class='set-box'>
    <view class='set-item'>
      <view class='item-title'>姓名</view>
      <view class='item-content'>
        <input type='text' maxlength='5' placeholder='请输入真实姓名' value='{{userInfo.nickName}}' bindinput='nickName'></input>
      </view>
    </view>
    <view class='set-item'>
      <view class='item-title'>公司名称</view>
      <view class='item-content'>
        <input type='text' maxlength='20' placeholder='请输入您的公司名称' value='{{userInfo.company}}' bindinput='company'></input>
      </view>
    </view>
    <view class='set-item'>
      <view class='item-title'>职位</view>
      <view class='item-content'>
        <input maxlength='5' placeholder='请输入您的职位' value='{{userInfo.position}}' bindinput='position'></input>
      </view>
    </view>
    <view class='set-item'>
      <view class='item-title'>所在城市</view>
      <view class='item-content item-city' bindtap='showCityInfo'>{{userInfo.cityName}}</view>
    </view>
    <view class='set-item'>
      <view class='item-title'>手机号</view>
      <view class='item-content'>
        <!-- <input type='number' wx:if="{{userInfo.phone != ''}}" focus="focusflag" placeholder='请输入您的联系电话' maxlength='11' value='{{userInfo.phone}}' bindinput='phone'></input> -->
        <input type='number' placeholder='暂无手机号' maxlength='11' value='{{userInfo.phone}}' bindinput='phone'></input>
      </view>
      <view class='get-phone' wx:if="{{userInfo.phone == ''}}">
        <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">获取手机号</button>
      </view>
    </view>
    <view class='set-item'>
      <view class='item-title'>微信号</view>
      <view class='item-content'>
        <input placeholder='请输入您的微信号' type='text' maxlength='30' value='{{userInfo.wechatNumber}}' bindinput='wechatNumber'></input>
      </view>
    </view>
    <view class='set-item'>
      <view class='item-title'>邮箱号</view>
      <view class='item-content'>
        <input placeholder='请输入您的邮箱' maxlength='30' placeholder='没有填写' value='{{userInfo.email}}' bindinput='email'></input>
      </view>
    </view>
    <view class='set-item'>
      <view class='item-title'>个人介绍</view>
      <view class='item-content'>
        <input placeholder='请输入个人介绍' maxlength='100' value='{{userInfo.introduction}}' bindinput='introduction'></input>
      </view>
    </view>
    <view class='set-picture'>
      <view class='item-title'>图片展示</view>
      <view class='item-content'>
        <image class='add-pic' wx:if="{{imageList.length != '6'}}" data-pos='list' bindtap="uploadImage" src='/images/add-pic-btn.png'></image>
        <view class='add-pic' wx:for="{{imageList}}" wx:key="{{index}}">
          <view class='img-close-box' data-ind="{{index}}" bindtap='closeimg'>
            <image class='img-close-icon' src='/images/img-close.png'></image>
          </view>
          <image class='img' bindtap='lookpic' data-imgurl="{{item}}" src='{{item}}/248' mode="aspectFit"></image>
        </view>
      </view>
    </view>
  </view>
  <view class='btn-box' bindtap='editUserInfo'>
    <button formType="submit" class='btn'>保存</button>
  </view>
</form>

<!-- 城市选择插件 -->
<view class="dialog-back" catchtap='cancel' catchtouchmove='true' hidden='{{cityShow}}'>
  <view class="city-wrap">
    <view class="city-btn">
      <text catchtap='cancel'>取消</text>
      <text catchtap='complete'>完成</text>
    </view>
    <picker-view class="city-con" bindchange="bindChange">
      <picker-view-column class="city-list" id="provinceWrap">
        <view wx:for="{{provinceData}}" wx:key="{{index}}" data-id='{{item.id}}'>{{item.name}}</view>
      </picker-view-column>
      <picker-view-column class="city-list" id="cityWrap">
        <view wx:for="{{cityData}}" wx:key="{{index}}">{{item.name}}</view>
      </picker-view-column>
    </picker-view>
  </view>
</view>
