.business{
 
}
.business .containt{
background: #f9f9fa;
font-size: 0;
}
.business .remind{
font-family: 'pingFangSC-Regular';
font-size: 24rpx;
background: #ffcf10;
height: 60rpx;
display: flex;
justify-content: center;
align-items: center;
}
.containt .information{
  padding: 0 40rpx;
  background: #fff;
}
.information{
display: flex;
margin-bottom: 15rpx;
}
.information .picture{
flex: 0 0 108rpx;
}
.information .picture .picture{
  padding-top: 30rpx;
}

.information .picture .img{
width: 108rpx;
height: 108rpx;
border-radius: 50%;
box-shadow: 0 4rpx 40rpx  #C2BEC0;
}
.information .text{
flex: 1;
padding-top: 30rpx;
padding-left: 26rpx;
}
.text .title{
overflow: hidden;
padding-top: 15rpx;
}
.title .name{
float: left;
font-family: "PingFangSC-Semibold";
font-size: 32rpx;
color: #282c39;
font-weight: bold;
}
.title .hot{
float: right;
font-size:22rpx;
font-family: "PingFangSC-Regular";
color: #a6a6a6;
margin-right:10rpx;

}
.hot .hot-pic{
display: inline-block;
vertical-align: middle;
}
.hot .hot-img {
 width: 21rpx;
 height: 25rpx;
}
.text .content .showClose{
  display: block;
  color: #fcc91a;
  font-size: 26rpx;
  margin-top: 20rpx;
}
.content {
  padding-top:20rpx;
}
.content .content-title{
  display: block;
  font-family: "PingFangSC-Regular";
  line-height: 34rpx;
  font-size: 26rpx;
  color: #282c39;
  overflow: hidden;
}
.content .img-group{
 padding-top: 30rpx;
}

.content .four{
  width: 400rpx;
}
.img-group .car{
  width: 168rpx;
  height: 168rpx;
  margin-right: 15rpx;
  /* box-shadow:5px 0 3px rgb(235, 229, 235); */
  border-radius: 10rpx;
  margin-bottom: 15rpx
}
.img-group .bigcar{
  width: 350rpx;
  height: 350rpx;
}
.notfour .car:nth-child(3n+0){
  margin-right: 0;
}
.text .time{
padding: 20rpx 0 30rpx 0;  
font-size:24rpx;
font-family: "PingFangSC-Regular";
color: #a6a6a6;
display: flex;
}
.time-text {
  flex: 1;
}
.time-img image{
  display: block;
  width: 28rpx;
  height: 30rpx;
}
.foot{
  font-size:22rpx;
  font-family: "PingFangSC-Regular";
  color: #a6a6a6;
  display: flex;
  padding-bottom: 20rpx;
}
.foot .check,.foot .quick,.foot .share{
flex: 1;
align-items: center;
display: flex
}

.foot .icon-check{
  width: 34rpx;
  height: 23rpx;
  margin-right: 20rpx;
}
.foot .icon-quick{
width: 27rpx;
height: 28rpx;
margin-right: 20rpx;
}
.foot .icon-share{
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
}
.btn-box{
/* margin: 60rpx auto 0; */
width: 100%;
position: fixed;
bottom: 0;
background: #fff;
}
.button{
z-index: 1;
position: fixed;
bottom: 400rpx;
right: 30rpx;
width: 100rpx;
border-radius: 100%;
height: 100rpx;
box-shadow:5rpx 8rpx 15rpx #ffe68f;
}
.showTab{
width: 50rpx;
height: 50rpx;
line-height: 50rpx;
text-align: center;
border-radius: 50%;
position: fixed;
font-size: 30rpx;
bottom: 40rpx;
right: 40rpx;
background: #ffcf10;
}
.nodata{
  width:100% ;
  height:100%;
  display: flex;
  justify-content: center;
  margin-top: 275rpx;
  font-size: 28rpx;
  color: #e5e5e5;
}
.nodata .no-wraper{
  width: 200rpx;
}
.nodata .no-img{
  width: 192rpx;
  height: 170rpx;
  display: block;
}
.nodata .no-text{
  padding-left: 11rpx;
  margin-top: 40rpx;
}
.max-height {
  height: 200rpx;
  overflow: hidden;
}