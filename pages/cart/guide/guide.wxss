/* pages/cart/guide/guide.wxss */
swiper {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: #fff;
}
swiper-item {
  width: 100%;
  height: 100%;
  background: #fff;
}

swiper-item image {
  display: block;
  width: 750rpx;
  height: 700rpx;
}

.item-text-box {
  width: 100%;
  padding-left: 100rpx;
  padding-right: 100rpx;
  box-sizing: border-box;
}

.item-text-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #2c2c2c;
  padding-top: 10rpx;
  padding-bottom: 40rpx;
}

.item-text-top {
  padding-bottom: 12rpx;
}

.item-text {
  color: #999;
  font-size: 28rpx;
  line-height: 34rpx;
}

.index-box {
  width: 100%;
  padding-left: 100rpx;
  padding-right: 90rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 115rpx;
  height: 120rpx;
  background: #fff;
}

.index-box image {
  display: block;
  width: 100%;
  height: 100%;
}

.home-btn {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  bottom: 0;
  right: 90rpx;
  border-radius: 100%;
}
