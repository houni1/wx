<view class='share'>
  <view class='title'>
    <scroll-view class='wraper' scroll-x="true" style="white-space: nowrap;">
      <view wx:for="{{them}}" class='type {{index==0?"hot":""}} {{swiperCurrent==index?"active":""}}' id="{{index}}" bindtap="clickEvent" data-themid="{{item.themeId}}" wx:key="item.themeId">
        {{item.title}}
      </view>
    </scroll-view>
  </view>
  <swiper class='banner' current="{{swiperCurrent}}" bindchange="swiperChange" style="height:{{bannerHeight}}px">
    <block wx:for="{{them}}" wx:for-index="index" wx:key="index">
      <swiper-item>
        <view class="ban-wrap">
          <image mode="widthFix" class='ban-img' data-url="{{item.url}}" src="{{item.url}}" bindtap="previewImage" bindload="imageLoad" />
        </view>
      </swiper-item>
    </block>
  </swiper>
  <view>
    <image src="{{choseimg}}" style="width:100%"></image>
  </view>
  <view class='content'>
    <view class='name'>小李</view>
    <view class='date'>星期三 2018/8/09 12:09:43</view>
    <view class='text'>今天来了一批好车，快来看看吧</view>
    <view class='{{prices.length==4?"picture":""}}'>
      <block wx:for="{{prices}}" wx:key="index">
        <image src='{{item}}' class='{{prices.length>1?"moreimg":"oneimg"}}'></image>
      </block>
    </view>
    <view class='card'>
      <image class='my-card' src='{{userQrCode}}'></image>
    </view>
    <footer class="footer">
      <view class='shareout'>
        <image class='out' src="../business/images/share.png"></image>
        <text>分享来自推车猫小程序</text>
      </view>
      <view class='myown'>我的专属码</view>
    </footer>
  </view>
  <view class='button'>
    <view class='down-wrap' bindtap="downPoster">
      <image class='download' src='../business/images/download.png'></image>
      <view class="butn-text">下载</view>
    </view>
  </view>
  <view class="cancel" bindtap="cancel">取消</view>
</view>