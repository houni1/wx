<!--pages/cart/about/about.wxml-->
<view class="about-wrap">
    <view class="tuichemao-intro-wrap">
        <image class="tuichemao-logo" src="{{tcmData.img}}"></image>
        <text class="tuichemao-name">{{tcmData.name}}</text>
        <text class="tuichemao-intro">{{tcmData.intro}}</text>
    </view>

    <view class="tuichemao-info-wrap">
        <view class="tuichemao-info" 
            wx:for="{{tcmData.text}}"
            wx:key="{{index}}"
            >
            <view class="tuichemao-title clear-fix">
                <text class="yellow-icon"></text>
                <text class="title-info">{{item.title}}</text>
            </view>
            <view class="info-con">{{item.content}}</view>
        </view>

    </view>

    <view class="tuichemao-versoin-wrap">
        <view class="tuichemao-version">版本号：V 1.0.0</view>
    </view>
    

</view>