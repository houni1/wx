/* pages/cart/index/index.wxss */
/* 名片部分 */
.home-card {
  background: #fff;
  position: relative;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.msg-box {
  position: fixed;
  bottom: 40rpx;
  right: 20rpx;
  height: 78rpx;
  background: #ffcf10;
  border-radius: 40rpx;
  font-size: 26rpx;
  line-height: 78rpx;
  text-align: center;
  color: #fff;
  vertical-align: middle;
  padding-left: 26rpx;
  padding-right: 26rpx;
  box-shadow:5rpx 5rpx 15rpx #ffe68f;
}
.msg-box text{
  float: left;
}
.msg-box .number {
  font-size: 40rpx;
}
/* 名片背景 */
.home-card .home-card-bg{
  width: 100%;
  height: 322rpx;
  position: absolute;
  top: 0;
  left: 0;
  /* z-index: -1; */
}
/* 名片盒子 */
.card-box {
  position: relative;
  width: 100%;
  height: auto;
  float: left;
  background: #fff;
  border-radius: 15rpx;
  /* border: 1px solid #ccc; */
  padding: 40rpx 50rpx 40rpx 50rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 4rpx 30rpx 0rpx #ebebeb;
}

.edit-icon {
  position: absolute;
  right: 0;
  top: 40rpx;
  display: block;
  height: 67rpx;
  width: 128rpx;
}
/* 头像名称职位 */
.user-info {
  width: 100%;
  float: left;
  line-height: 98rpx;
  height: 98rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}
.user-pic{
  display: inline-block;
  float: left;
  width: 98rpx;
  height: 98rpx;
  border-radius: 100%;
  background: #eee;
  /* box-shadow: 0rpx 4rpx 20rpx 0rpx #C2BEC0; */
  box-shadow: 0rpx 4rpx 20rpx 0rpx #C2BEC0;
}
.user-name, .user-position {
  float: left;
  display: inline-block;
  line-height: 98rpx;
  padding-left: 21rpx;
}
.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #282c39;
}
.user-position {
  font-size: 32rpx;
}

.user-list {
  width: 100%;
  height: auto;
  padding-bottom: 27rpx;
  padding-left: 124rpx;
  box-sizing: border-box;
  float: left;
}

.user-li {
  width: 100%;
  float: left;
}
.li-icon-box {
  display: inline-block;
  height: 54rpx;
  line-height: 54rpx;
  vertical-align: middle;
}
.user-li .li-icon{
  display: inline-block;
}

.user-li .hot-icon {
  width: 22rpx;
  height: 23rpx;
  margin-top: 1rpx;
}

.user-li .city-icon {
  width: 24rpx;
  height: 30rpx;
  margin-top: 1rpx;
}

.user-li .mail-icon {
  width: 24rpx;
  height: 19rpx;
}

.user-li .tel-icon {
  width: 20rpx;
  height: 29rpx;
  /* margin-top: 0rpx; */
}

.user-li .li-text{
  font-size: 26rpx;
  color: #808080;
  padding-left: 24rpx;
  line-height: 50rpx;
}

.hot-num {
  color: #f25827;
  font-size: 30rpx;
  font-weight: 600;
}
.li-phone-box {
  display: inline-block;
  float: left;
}
.get-phone {
  margin-left: 125rpx;
  display: inline-block;
  width: 155rpx;
  height: 54rpx;
  float: left;
}

.get-phone button {
  width: 155rpx;
  height: 54rpx;
  padding: 0;
  border: 1px solid #e6e6e6;
  font-size: 24rpx;
  color: rgb(252, 201, 26);
  text-align: center;
  line-height: 54rpx;
  border-radius: 27rpx;
  outline: none;
  background: #fff;
}
.get-phone button::after {
  border: 0;
}

.user-phone-input {
  display: flex;
}
.user-phone-input .li-icon {
  padding-top: 12rpx;
}

.user-li .li-text-input {
  font-size: 26rpx;
  color: #808080;
  padding-left: 24rpx;
  flex: 1;
}



.user-company {
  font-size: 32rpx;
  font-weight: 600;
  color: #282c39;
}
.user-allow {
  width: 100%;
  line-height: 32rpx;
  height: 32rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}
.user-allow .allow-icon {
  float: left;
  display: inline-block;
  width: 27rpx;
  height: 32rpx;
}
.user-allow text {
  display: inline-block;
  padding-left: 22rpx;
  float: left;
  font-size: 26rpx;
  color: #808080;
}


.card-list {
  background: #fff;
  margin-bottom: 14rpx;
  width: 100%;
  display: flex;
  padding-top: 60rpx;
  padding-bottom: 25rpx;
}
.card-list button {
  border: none;
  outline: none;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.card-list button::after {
  border: 0; 
}
.card-li {
  flex: 1;
  text-align: center;
}
.card-li .card-li-pic {
  text-align: center;
}
.card-li image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}


.card-li text {
  font-size: 26rpx;
  color: #4d4d4d;
}

.card-li-text {
  display: inline-block;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}

.lookMore {
  text-align: center;
  font-size: 26rpx;
  color: #a6a6a6;
  line-height: 50rpx;
  padding-top:10rpx;
  padding-bottom: 20rpx;
  background: #fff;
}


/* 猫哥卫星 */
.home-catlist {
  background: #fff;
  /* padding-bottom: 100rpx; */
}
.catlist-title {
  font-size: 40rpx;
  color: #282c39;
  font-weight: 600;
  width: 100%;
  padding: 50rpx 40rpx 35rpx 40rpx;
  box-sizing: border-box;
}

.catli {
  width: 100%;
  padding-left: 40rpx;
  box-sizing: border-box;
  display: flex;
}
.catli .catli-pic {
  display: block;
  width: 88rpx;
  height: 88rpx;
  border-radius: 100%;
  margin-right: 40rpx;
  padding-top: 35rpx;
  padding-bottom: 35rpx;
}

.catli .catli-pic image {
  display: inline-block;
  width: 100%;
  height: 100%;
  border-radius: 100%;
  box-shadow: 0rpx 4rpx 20rpx 0rpx #C2BEC0;
}
.catli-info {
  flex: 1;
  border-bottom: 1px solid #f5f5f5;
  font-size: 24rpx;
  padding-top: 35rpx;
  padding-bottom: 35rpx;
}

.catli:last-child .catli-info {
  border-bottom: none;
}


.catli-info-top {
  padding-top: 4rpx;
  display: flex;
}
.catli-info-bottom {
  padding-top: 8rpx;
  display: flex;
}
.catli-info-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #282c39;
  padding-right: 15rpx;
}
.emao-logo {
  display: block;
  width: 88rpx;
  height: 30rpx;
  margin-top: 6rpx;
}
.catli-info-time {
  flex: 1;
  text-align: right;
  padding-right: 40rpx;
  box-sizing: border-box;
}
.catli-info-text, .catli-info-time {
  font-size: 24rpx;
  color: #a6a6a6;
}
.catli-info-text {
  display: inline;
}
.catli-info-phone {
  display: inline;
  text-align: right;
  flex: 1;
  padding-right: 40rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #282c39;
}
.catli-info-phone .phone-icon {
  display: inline-block;
  width: 27rpx;
  height: 28rpx;
  margin: -4rpx;
  margin-right: 15rpx;
}
.catli-info-text .num {
  color: #fcc91a;
  font-size: 26rpx;
  font-weight:bold;
}

.home-mark-box {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  background: #ccc;
}

.home-mark {
  width: 690rpx;
  height: 200rpx;
  background: #fff;
  margin: 130rpx auto 0 auto;
}

.shadow {
  position: fixed;
  z-index: 30;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .4)
}
.shadow .contain {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 40rpx;
  width: 500rpx;
  background-color: #fff;
}
.shadow .contain .ttl {
  margin-bottom: 50rpx;
  font-size: 35rpx;
  color: #2c2c2c;
}
.shadow .contain .desc {
  line-height: 50rpx;
  font-size: 26rpx;
  color: #999;
}
.shadow .btn-wrapper {
  margin-top: 40rpx;
  text-align: right;
  font-size: 28rpx;
  color: #2c2c2c;
}
.shadow .btn-wrapper .confirm {
  position: relative;
  display: inline-block;
  margin-left: 50rpx;
  color: #1AAD16;
}
.shadow .btn-wrapper .confirm button {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  opacity: 0;
}