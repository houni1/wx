/* pages/cart/isallow/isallow.wxss */
.isallow-box {
  text-align: center;
}

.isallow-pic {
  width: 174rpx;
  height: 174rpx;
  border-radius: 100%;
  margin: 123rpx auto 0 auto;
}

.isallow-pic image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.isallow-title {
  font-size: 32rpx;
  color: #282c39;
  font-weight: 600;
  padding-top: 45rpx;
  padding-bottom: 30rpx;
}

.isallow-text {
  font-size: 26rpx;
  color: #a6a6a6;
}

.isallow-btns {
  width: 100%;
  padding: 60rpx 50rpx;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  background: #ffcf10;
  color: #282c39;
  border-radius: 50rpx;
}