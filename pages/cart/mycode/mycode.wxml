<view class='mycode-box' wx:if="{{flag}}">
  <view class='my-code'>
    <view class='my-code-pic'>
      <image src="{{userInfo.exclusiveCode}}"></image>
    </view>
    <view class='my-code-name'>{{userInfo.nickName}}</view>
    <view class='my-code-company'>{{userInfo.company}}</view>
    <view class='my-code-btn'>
      <view class='btn'>保存专属码图片</view>
    </view>
  </view>
  <view class='mail-code'>
    <image class='right-top-icon' src='/images/right-top-icon.png'></image>
    <view class='mail-code-top'>
      <text class='mail-code-name'>{{userInfo.cityName}}</text>
      <text class='mail-code-position'>{{userInfo.position}}</text>
    </view>
    <view class='mail-code-bottom'>
      <view class='mail-code-cont'>
        <view class='cont-item' wx:if="{{userInfo.company}}">
          <view class='item-icon'>
            <image class='company-icon' src='/images/company-icon1.png'></image>
          </view>
          <text class='item-text'>{{userInfo.company}}</text>
        </view>
        <view class='cont-item' wx:if="{{userInfo.phone}}">
          <view class='item-icon'>
            <image class='tel-icon' src='/images/tel-icon.png'></image>
          </view>
          <text class='item-text'>{{userInfo.phone}}</text>
        </view>
        <view class='cont-item' wx:if="{{userInfo.email}}">
          <view class='mail-icon-box'>
            <image class='mail-icon' src='/images/mail-icon.png'></image>
          </view>
          <text class='item-text'>{{userInfo.email}}</text>
        </view>
      </view>
      <view class='mail-code-pic'>
        <image src='{{userInfo.exclusiveCode}}'></image>
      </view>
    </view>
    <view class='to-mail' bindtap='tomail'>
      <view class='to-mail-box'>
        <image class='to-mail-icon' src='/images/to-mail.png'></image>
        <text class='to-mail-text'>发送至邮箱</text>
      </view>
    </view>
  </view>
</view>
<view class='mail-mark' wx:if="{{toMailFlag}}">
  <view class='mail-box'>
    <view class='mail-box-title'>请输入您的邮箱</view>
    <view class='mail-box-input'>
      <input placeholder='请输入邮箱地址' focus="focusflag" value=''></input>
    </view>
    <view class='mail-box-btns'>
      <text class='cancel-btn'>取消</text>
      <text class='sure-btn'>确定</text>
    </view>
  </view>
</view>