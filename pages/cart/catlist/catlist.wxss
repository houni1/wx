/* pages/cart/catlist/catlist.wxss */
/* 猫哥卫星 */
.scroll-wapper-bottom {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.home-catlist {
  background: #fff;
}
.catlist-title {
  font-size: 40rpx;
  color: #282c39;
  font-weight: 600;
  width: 100%;
  padding: 50rpx 40rpx 35rpx 40rpx;
  box-sizing: border-box;
}

.catli {
  width: 100%;
  padding-left: 40rpx;
  box-sizing: border-box;
  display: flex;
}
.catli .catli-pic {
  display: block;
  width: 88rpx;
  height: 88rpx;
  border-radius: 100%;
  margin-right: 40rpx;
  padding-top: 35rpx;
  padding-bottom: 35rpx;
}

.catli .catli-pic image {
  display: inline-block;
  width: 100%;
  height: 100%;
  border-radius: 100%;
  box-shadow: 0rpx 4rpx 40rpx 0rpx #C2BEC0;
}
.catli-info {
  flex: 1;
  border-bottom: 1px solid #f2f2f2;
  font-size: 24rpx;
  padding-top: 35rpx;
  padding-bottom: 35rpx;
}
.catli:last-child .catli-info {
  border-bottom: none;
}
.catli-info-top {
  padding-top: 4rpx;
  display: flex;
}
.catli-info-bottom {
  padding-top: 14rpx;
  display: flex;
}
.catli-info-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #282c39;
  padding-right: 15rpx;
}
.emao-logo {
  display: block;
  width: 88rpx;
  height: 30rpx;
  margin-top: 6rpx;
}
.catli-info-time {
  flex: 1;
  text-align: right;
  padding-right: 40rpx;
  box-sizing: border-box;
}
.catli-info-text, .catli-info-time {
  font-size: 24rpx;
  color: #a6a6a6;
}
.catli-info-text {
  display: inline;
}
.catli-info-phone {
  display: inline;
  text-align: right;
  flex: 1;
  padding-right: 40rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #282c39;
}
.catli-info-phone .phone-icon {
  display: inline-block;
  width: 27rpx;
  height: 28rpx;
  margin: -4rpx;
  margin-right: 15rpx;
}
.catli-info-text .num {
  color: #fcc91a;
  font-size: 26rpx;
}