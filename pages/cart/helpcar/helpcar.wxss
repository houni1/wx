/* pages/cart/helpcar/helpcar.wxss */
.help-item-wrap {
  width: 100%;
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}

.help-item-box {
  width: 100%;
  padding-bottom: 25rpx;
  border-radius: 18rpx;
  background: pink;
  margin-bottom: 60rpx;
}

.help-item-title {
  width: 100%;
  padding: 45rpx 30rpx;
  box-sizing: border-box;
  color: #fff;
  height: 120rpx;
  background: #3b3f4f;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  font-size: 30rpx;
  line-height: 30rpx;
}

.help-item-pic {
  width: 100%;
  padding: 19rpx 30rpx;
  box-sizing: border-box;
}

.help-item-pic image {
  display: block;
  width: 100%;
  height: 640rpx;
  background: yellow;
}

.help-item-text {
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 40rpx;
  color: #2c2c2c;
}