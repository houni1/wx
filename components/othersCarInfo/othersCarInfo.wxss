/* pages/cart/othersCarInfo/othersCarInfo.wxss */
.flex-wrapper{
  display: flex;
}
.flex-item{
  flex: 1;
}
.flex2 {
  flex: 2;
}
.flex3 {
  flex: 3;
}
.flex4 {
  flex: 4;
}
page {
  height: 100%;
}
.wrap {
  position: relative;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx;
  padding-top: 90rpx;
  box-sizing: border-box;
}
.kinds {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 90rpx;
  padding: 20rpx 0 20rpx 20rpx;
  align-items:  center;
  background: #fff;
  box-sizing: border-box;
  box-shadow: 0 4rpx 10rpx #f5f5f5;
  z-index: 100;
}
.kinds .kind {
  flex: 3;
  position: relative;
}
.kinds .kind.first {
  flex: 4;
}
.kinds .kind image {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -26rpx;
  width: 60rpx;
}
.kinds text {
  display: block;
  font-size: 26rpx;
  color: #a6a6a6;
  text-align: center;
  font-family: 'PingFangSC-Semibold';
}
.active {
  color: #282c39 !important;
  font-weight: bold;
}
.moreIcon {
  width: 90rpx;
  text-align: center;
  border-left: 1px solid #eee;  
}
.moreIcon image{
  width: 20rpx;
  vertical-align: middle;
}

/* 列表 */
.carsList {
  flex: 1;
  overflow-x: auto;
}
.item {
  position: relative;
  display: flex;
  flex-direction: wrap;
  flex: 1;
  overflow: hidden;
  padding: 28rpx 0;
  height: 200rpx;
  margin-bottom: 15rpx;
  background: #fff;
}
.hotTag {
  position: absolute;
  left: 40rpx;
  top: 0;
}
.hotTag image {
  width: 86rpx;
}
.imgWrap {
  width: 330rpx;
  height: 200rpx;
  text-align: center;
}
.item .imgWrap image {
  width: 260rpx;
  height: 100%;
  vertical-align: middle;
}
.carInfo {
  flex: 1;
  padding-right: 20rpx;
}
.carInfo .title {
  font-size: 28rpx;
  line-height: 42rpx;
  font-weight: bold;
  margin-bottom: 14rpx;
  color: #282c39;
  font-family: 'PingFangSC-Semibold';
}
.carInfo .subTitle {
  font-size: 28rpx;
}
.price {
  font-size: 24rpx;
  color: #f72626;
  margin-bottom: 5rpx;
}
.priceNum {
  font-size: 38rpx;
  font-weight: bold;
  display: inline;
}
.guidePrice {
  font-size: 24rpx;
  color: #a6a6a6;
  margin-bottom: 14rpx;
}
/* 车型列表 */
.carNameList {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 100;
}
.opacity {
  background: rgba(0, 0, 0, 0.3);
}
.thiv {
  position: fixed;
  left: 0;
  top: -100%;
  width: 100%;
  /* height: 80%; */
  background: #fff;
  -webkit-transition: all .5s ease-in;
  -moz-transition: all .5s ease-in;
  transition: all .5s ease-in;
}
.chooseBrand {
  padding: 20rpx 0;
  height: 90rpx;
  box-sizing: border-box;
  box-shadow: 0 2px 5px #f5f5f5;
}
.toChoose {
  font-size: 26rpx;
  color: #282c39;
  padding-left: 40rpx;
}
.brandList {
  margin-top: 10rpx;
  background: #fff;
  max-height: 800rpx;
  overflow: auto;
}
.brandList image {
  width: 44rpx;
  margin-right: 40rpx;
}
.brandList .brand {
  height: 86rpx;
  display: flex;
  align-items: center;
  margin-left: 40rpx;
  font-size: 26rpx;
}
.choosed {
  color: #fcc91a;
  font-weight: bold;
}
.showAll {
  /* position: absolute; */
  /* bottom: 24rpx; */
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #a6a6a6;
  margin: 30rpx 0;
}
.move_t{
  z-index: 22;
  animation: mymove 0.75s 1;
  animation-fill-mode:forwards;
}

@keyframes mymove{
  from {top: -100%;}
  to {top: 0%;}
}
@keyframes mymove2{
  from {top: 0%;}
  to {top: -100%;}
}
.noData {
  margin: 276rpx auto 0;
  width: 245rpx;
}
.noData image{
  width: 100%;
}

.shadow {
  position: fixed;
  z-index: 30;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .4)
}
.shadow .content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 40rpx;
  width: 500rpx;
  background-color: #fff;
}
.shadow .content .ttl {
  margin-bottom: 50rpx;
  font-size: 35rpx;
  color: #2c2c2c;
}
.shadow .content .desc {
  line-height: 50rpx;
  font-size: 26rpx;
  color: #999;
}
.shadow .btn-wrapper {
  margin-top: 40rpx;
  text-align: right;
  font-size: 28rpx;
  color: #2c2c2c;
}
.shadow .btn-wrapper .confirm {
  position: relative;
  display: inline-block;
  margin-left: 50rpx;
  color: #1AAD16;
}
.shadow .btn-wrapper .confirm button {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  opacity: 0;
}